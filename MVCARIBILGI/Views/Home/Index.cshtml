@{
    
    Layout = null;
}

<html>
<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>Login</title>
</head>

<body>
    <div class="container">
        <div class="row">
            @using (Html.BeginForm("Index", "Home", FormMethod.Post))//mvcRazor 1.Sayfa İsmi 2.Controler İsmi 3.Method Tipi
