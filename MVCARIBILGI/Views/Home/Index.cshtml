                        <label>Kullanıcı Adı</label>
                        <input class="form-control" name="kullaniciAdi" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label>Şifre</label>
                        <input class="form-control" name="sifre" placeholder="Enter password">
                    </div>
                    <button class="btn btn-success">Giriş Yap</button>&nbsp&nbsp<a href="/Home/TeacherLogin" class="btn btn-warning">EgitmenGiriş</a>
                </div>
            }
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>